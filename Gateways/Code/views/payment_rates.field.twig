{# empty Twig template #}

{% import "form.macro.twig" as forms %}

{% set item = get_context('item') %}
{% set parameters = {'gateway_id':item.id} %}

{% set rates_input = callFunction( "Payments.Gateways.Code.Models.GatewaysModel", 'getChargeRatesInput' ) %}
{% set rates_arr = callFunction( "Payments.Gateways.Code.Models.GatewaysModel", 'getGatewayPaymentRatesArr', parameters ) %}

{{ forms.input('payment_rates', 'checkbox', rates_arr, 'Rates', null, null, 'multiple', null, rates_input) }}

{% if rates_input|length > 0 and rates_arr|length > 0 %}
    {% for rate in rates_input %}
        {% if  rate.value in rates_arr %}
            {{ rate.text }}, 
        {% endif %}
    {% endfor %}
{% endif %}