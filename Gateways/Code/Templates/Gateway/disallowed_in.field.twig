{% set countries_input = callFunction( "Setup.Components.World.Models.WorldModel", 'getCountriesInput' ) %}
{% set countries_arr = callFunction( "Payments.Components.Gateway.Models.GatewayModel", 'getGatewayCountryDisallowedInArr', parameters ) %}

{{ forms.input('disallowed_in.', 'select', countries_arr, 'Countries Disallowed', null, null, 'multiple', null, countries_input) }}

